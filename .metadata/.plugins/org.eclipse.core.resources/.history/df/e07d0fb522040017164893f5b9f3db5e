package ast.ManejadorDeErrores;

import java.io.PrintStream;
import java.util.ArrayList;
import java.util.List;

import ast.tipos.TipoError;

public class MH {
	private static MH instancia;
	private List<TipoError> errores = new ArrayList<>();

	public static MH getInstancia() {
		if (instancia == null)
			instancia = new MH();
		return instancia;
	}

	public boolean huboErrores() {
		return false;
	}

	public void addError(TipoError error) {
		errores.add(error);
	}

	public void mostrarErrores(PrintStream stream) {

	}
}
